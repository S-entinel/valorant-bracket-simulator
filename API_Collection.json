{
  "info": {
    "name": "Valorant Tournament Simulator API",
    "description": "REST API endpoints for tournament simulation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": [""]
        }
      }
    },
    {
      "name": "Teams",
      "item": [
        {
          "name": "Get All Teams",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/teams",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "teams"]
            }
          }
        },
        {
          "name": "Get Teams by Region",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/teams?region=Americas",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "teams"],
              "query": [
                {
                  "key": "region",
                  "value": "Americas"
                }
              ]
            }
          }
        },
        {
          "name": "Get Top 5 Teams",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/teams?limit=5",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "teams"],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Get Team by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/teams/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "teams", "1"]
            }
          }
        },
        {
          "name": "Refresh Teams",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/teams/refresh",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "teams", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Simulations",
      "item": [
        {
          "name": "Run Simulation (8 teams, BO3)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"team_ids\": [\"1\", \"2\", \"3\", \"4\", \"5\", \"6\", \"7\", \"8\"],\n  \"num_simulations\": 10000,\n  \"best_of\": 3,\n  \"elo_sigma\": 50.0,\n  \"tournament_format\": \"single_elimination\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/simulate",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "simulate"]
            }
          }
        },
        {
          "name": "Run Quick Simulation (4 teams, BO1)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"team_ids\": [\"1\", \"2\", \"3\", \"4\"],\n  \"num_simulations\": 1000,\n  \"best_of\": 1\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/simulate",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "simulate"]
            }
          }
        },
        {
          "name": "Get Simulation Results",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/simulations/{{simulation_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "simulations", "{{simulation_id}}"]
            }
          }
        },
        {
          "name": "List Recent Simulations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/simulations?limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "simulations"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Simulation",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/simulations/{{simulation_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "simulations", "{{simulation_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Stats Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/stats/summary",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "stats", "summary"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "simulation_id",
      "value": ""
    }
  ]
}
